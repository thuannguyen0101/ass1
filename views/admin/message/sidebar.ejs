<div class="card">
    <div class="card-header">
        <h3 class="card-title">Folders</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/admin/message/list" class="nav-link">
                    <i class="fa-fw fas fa-inbox"></i> Inbox
                    <span class="badge bg-primary float-right"><%= unreadMessage %></span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/admin/message/list?isRead=false" class="nav-link">
                    <i class="fa-fw far fa-envelope"></i> Unread
                </a>
